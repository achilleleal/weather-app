{
  "homepage": "https://achilleleal.github.io/weather-app/",
  "name": "weather-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "autoprefixer": "^9.8.6",
    "postcss-cli": "^8.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "tachyons": "^4.12.0",
    "tailwindcss": "^1.8.10"
  },
  "scripts": {
    "start": "npm run tailwind && react-scripts start",
    "build": "npm run purge && react-scripts build",
    "purge": "NODE_ENV=production npm run tailwind",
    "tailwind": "postcss src/styles/tailwind.css -o src/styles/styles.css",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^3.1.0"
  }
}
